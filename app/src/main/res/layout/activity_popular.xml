<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/default_color"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/toolbar_title"
                style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Popular"
                android:textColor="@android:color/white" />
        </com.google.android.material.appbar.MaterialToolbar>


        <ImageView
            android:id="@+id/img_destination"
            android:layout_width="157dp"
            android:layout_height="157dp"
            android:importantForAccessibility="no"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/img_kohnorea"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="38dp"
            tools:layout_editor_absoluteY="85dp" />

        <View
            android:id="@+id/gredient_desination"
            android:layout_width="158dp"
            android:layout_height="158dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/bg_product"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="38dp"
            tools:layout_editor_absoluteY="85dp" />

        <TextView
            android:id="@+id/txt_destination"
            android:layout_width="142dp"
            android:layout_height="20dp"
            android:layout_alignParentTop="true"
            android:gravity="top"
            android:text="@string/txt_destination"
            android:textAppearance="@style/secondary_txt"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="48dp"
            tools:layout_editor_absoluteY="184dp" />

        <TextView
            android:id="@+id/txt_distance"
            android:layout_width="79.65dp"
            android:layout_height="15dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:gravity="top"
            android:text="@string/txt_distance"
            android:textAppearance="@style/distance_style"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="67dp"
            tools:layout_editor_absoluteY="212dp" />

        <ImageView
            android:id="@+id/img_location"
            android:layout_width="14dp"
            android:layout_height="16dp"
            android:importantForAccessibility="no"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/ic_location"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="46dp"
            tools:layout_editor_absoluteY="212dp" />

        <ImageView
            android:id="@+id/bt_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_back"
            tools:layout_editor_absoluteX="38dp"
            tools:layout_editor_absoluteY="16dp"
            tools:ignore="MissingConstraints"
            android:importantForAccessibility="no" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
